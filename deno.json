{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A npm:vite",
    "build": "deno run -A npm:vite build",
    "preview": "deno run -A npm:vite preview",
    "serve": "deno run -A src/server.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/csv": "jsr:@std/csv@^1",
    "@std/http": "jsr:@std/http@^1.0.25",
    "@std/random": "jsr:@std/random@^0.1",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.2.0",
    "daisyui": "npm:daisyui@^5.5.18",
    "html-to-image": "npm:html-to-image@^1.11.11",
    "lucide-react": "npm:lucide-react@^0.575.0",
    "react": "npm:react@^19.2.4",
    "react-dom": "npm:react-dom@^19.2.4",
    "react-router-dom": "npm:react-router-dom@^7.13.0",
    "@types/react": "npm:@types/react@^19.2.14",
    "tailwindcss": "npm:tailwindcss@^4.2.0",
    "vite": "npm:vite@^7.3.1",
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.6",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^5.1.4"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "fmt": {
    "lineWidth": 160,
    "exclude": [
      ".github/skills/"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "react"
      ]
    }
  },
  "deploy": {
    "org": "paularoid",
    "app": "team-scrambler-v2"
  }
}
